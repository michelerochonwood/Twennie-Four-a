<h2 class="form-header">suggest a new topic</h2>
<div class="suggest-topic-form">
  <form action="/topics/suggest" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="form-field">
      <label for="name">Your Name</label>
      <input type="text" id="name" name="name" value="{{user.name}}" required>
    </div>

    <div class="form-field">
      <label for="email">Your Email</label>
      <input type="email" id="email" name="email" value="{{user.email}}" required>
    </div>

    {{#if user.groupName}}
    <div class="form-field">
      <label for="groupName">Group Name</label>
      <input type="text" id="groupName" name="groupName" value="{{user.groupName}}">
    </div>
    {{/if}}

    <div class="form-field">
      <label for="topicTitle">New Topic Title</label>
      <input type="text" id="topicTitle" name="topicTitle" required>
    </div>

<div class="form-field">
  <label for="paragraph1">Paragraph 1</label>
  <textarea id="paragraph1" name="paragraph1" required></textarea>
  <p class="form-helper-text">Suggested: 75–150 words</p>
</div>

<div class="form-field">
  <label for="paragraph2">Paragraph 2</label>
  <textarea id="paragraph2" name="paragraph2" required></textarea>
  <p class="form-helper-text">Suggested: 75–150 words</p>
</div>

<div class="form-field">
  <label for="paragraph3">Paragraph 3</label>
  <textarea id="paragraph3" name="paragraph3" required></textarea>
  <p class="form-helper-text">Suggested: 75–150 words</p>
</div>


    <button type="submit" class="submit-topic-btn">Submit Topic Suggestion</button>
  </form>
</div>

