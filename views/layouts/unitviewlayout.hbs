<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page title -->
  <title>{{title}}</title>

  <!-- Global Navigation Styles -->
  <link rel="stylesheet" href="/css/navigation.css?v={{timestamp}}">

  <!-- Unit View Styles -->
  <link rel="stylesheet" href="/css/unitviewstyles.css?v={{timestamp}}">

  <!-- Mobile Navigation Script -->
  <script src="/javascript/mobile-nav.js?v={{timestamp}}" defer></script>

  <!-- Ionicons CDN -->
  <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>

<body class="main-body">

  {{> mainpartials/header}}

  <!-- Main content area -->
  {{{body}}}

  <!-- Unit View Scripts -->
  <script src="/javascript/tagging/tagging.js?v={{timestamp}}"></script>
  <script src="/javascript/prompts/registerform.js?v={{timestamp}}"></script>
  <script src="/javascript/prompts/assignform.js?v={{timestamp}}"></script>
  <script src="/javascript/prompts/assignformerror.js?v={{timestamp}}"></script>
  <script src="/javascript/animation/completion.js?v={{timestamp}}"></script>

  <!-- External library (no cache-busting needed) -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <footer>
    {{> mainpartials/footer}}
  </footer>

</body>
</html>
