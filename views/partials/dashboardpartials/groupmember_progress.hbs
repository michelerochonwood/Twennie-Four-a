{{#if currentPromptSets.length}}
<div class="groupmember-progress-container">
  <h2 class="groupmember-progress-current-title">current prompt sets</h2>
  
  <div class="groupmember-progress-current">
    {{#each currentPromptSets}}
    <div class="groupmember-progress-grid">
      <h2 class="groupmember-progress-title">{{this.promptSetTitle}}</h2>

      <!-- Dynamically load the correct progress SVG -->
      <img 
          src="/promptprogress/promptprogress{{increment @index}}-{{this.promptIndex}}.svg"
          alt="Progress Pie Chart" 
          class="groupmember-progress-svg"
          data-progress="{{this.promptIndex}}"
      >

      <p class="groupmember-progress-target">you have completed {{this.promptIndex}} prompts in this set</p>
    </div>
    {{/each}}
  </div>
</div> <!-- ✅ Closing missing div for .groupmember-progress-container -->

<div class="groupmember-progress-completed">
    <h2 class="groupmember-progress-completed-title">Your completed prompt sets and earned badges can be viewed in your profile.</h2>
    <a href="/profile/groupmember/{{groupMember._id}}" class="groupmember-profile-btn" style="margin-right: 35%">my profile</a>
</div> <!-- ✅ Closing div for .groupmember-progress-completed -->
{{/if}}

    