<div class="leader-topics-container">
    <h3 class="leader-dashboard-subtitles">topics</h3>

    <div class="leader-topics-grid">
        {{#if leader.topics.topic1}}
            <div class="leader-topic-card" data-topic-id="{{selectedTopics.topic1.slug}}">
                <div class="leader-topic-title">{{leader.topics.topic1}}</div>
                <ul class="leader-topic-subtopics">
                    {{#each selectedTopics.topic1.subtopics}}
                        <li>{{this}}</li>
                    {{else}}
                        <li>No subtopics available</li>
                    {{/each}}
                </ul>
                <a href="/membertopics/{{selectedTopics.topic1.viewName}}" class="leader-topic-review">review this topic</a>
            </div>
        {{/if}}

        {{#if leader.topics.topic2}}
