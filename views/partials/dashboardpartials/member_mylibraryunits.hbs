<section class="dashboard-library-units">
  <h2 class="dashboard-section-title">my library units</h2>
  <table class="dashboard-library-table">
    <thead>
      <tr>
        <th class="dashboard-library-header">unit type</th>
        <th class="dashboard-library-header">title</th>
        <th class="dashboard-library-header">status</th>
        <th class="dashboard-library-header">main topic</th>
        <th class="dashboard-library-header">view unit</th>
      </tr>
    </thead>
    <tbody>
      {{#each memberUnits}}
        <tr class="dashboard-library-row">
          <td class="dashboard-library-cell">{{this.unitType}}</td>
          <td class="dashboard-library-cell">{{this.title}}</td>
          <td class="dashboard-library-cell">{{this.status}}</td>
          <td class="dashboard-library-cell">{{this.mainTopic}}</td>
          <td class="dashboard-library-cell">
            <a href="/unitviews/{{toLowerCase this.unitType}}s/view/{{this._id}}" class="dashboard-view-link">view and/or edit</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="dashboard-no-units">No units submitted yet.</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>

