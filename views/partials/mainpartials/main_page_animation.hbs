<!-- JavaScript THIS HANDLES THE PORTRAIT IMAGES IN THE FIRST SECTION OF THE HOMEPAGE -->
<script>
document.addEventListener("DOMContentLoaded", function () {
  const images = [
    {
      src: "https://www.twennie.com/images/lady.svg",
      quote: "Twennie has allowed my team to build a culture of learning. We learn in small increments every day, continually developing new skills as we work."
    },
    {
      src: "https://www.twennie.com/images/fellow.svg",
      quote: "I've seen a noticeable change in my group. They work together more effectively. They argue less. They support each other. I've even caught them having fun together, all because of Twennie."
    },
    {
      src: "https://www.twennie.com/images/lady2.svg",
      quote: "I love that we no longer have to send people away for days at a time for training. Twennie lets them learn right here, a little at a time, every day."
    }
  ];

  let currentIndex = 0;
  const testimonialImage = document.getElementById("testimonial-image");
  const testimonialText = document.getElementById("testimonial-text");

  function changeTestimonial() {
    // Fade out both image and text
    testimonialImage.classList.add("fade-out");
    testimonialText.classList.add("fade-out");

    setTimeout(() => {
      // Move to the next index
      currentIndex = (currentIndex + 1) % images.length;

      // Update image and quote
      testimonialImage.src = images[currentIndex].src;
      testimonialText.textContent = images[currentIndex].quote;

      // Reset opacity smoothly
      setTimeout(() => {
        testimonialImage.classList.remove("fade-out");
        testimonialText.classList.remove("fade-out");
      }, 100);
    }, 1000); // Matches CSS transition duration
  }

  // Rotate every 5 seconds
  setInterval(changeTestimonial, 8000);
});



</script>





